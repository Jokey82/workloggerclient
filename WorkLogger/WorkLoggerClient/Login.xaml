<Window x:Class="WorkLoggerClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLoggerClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Sign in" Height="200" Width="332">
    <Grid Margin="0,0,0,0">
        <TextBox FontSize="14" HorizontalAlignment="Left" Height="25" Margin="60,38,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="200"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="80,108,0,0" VerticalAlignment="Top" Width="60"/>
        <Button Content="New user" HorizontalAlignment="Left" Margin="180,108,0,0" VerticalAlignment="Top" Width="60"/>
        <PasswordBox FontSize="14" HorizontalAlignment="Left" Margin="60,73,0,0" VerticalAlignment="Top" Width="200" Height="25"/>

    </Grid>
</Window>
